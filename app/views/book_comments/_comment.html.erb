<% book_comments.each do |book_comment| %>
	<tr>
		<td><%= attachment_image_tag book_comment.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size:'30x30' %></td>
		<td><%= book_comment.comment %></td>
		<% if current_user == book_comment.user %>
		<td><%= link_to 'Destroy', book_book_comment_path(book, book_comment), method: :delete, remote: true, class:"btn-sm btn-danger" %></td>
		<% end %>
	</tr>
<% end %>