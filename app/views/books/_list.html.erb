
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
<table class="table">
	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>
	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
</table>
<%= link_to edit_user_registration_path, class:"btn btn-default gryphicon gryphicon-wernch" %>
<h2>New book</h2>
<%= form_for(book) do |f| %>
	<% if book.errors.any? %>
		<div id="error_explanation">
			<h2><%= books.errors.count %>件のエラーが発生しました。</h2>
			<ul>
				<% book.errors.full_messages.each do |message| %>
				<li>
					<%= message %>
				</li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="form-group">
		<%= f.label 'Title' %>
		<%= f.text_field :title, class:"form-control" %>
	</div>
	<div class="form-group">
		<%= f.label 'Opinion' %>
		<%= f.text_area :body, class:"form-control" %>
	</div>
	<%= f.submit 'Create Book', class:"btn btn-primary" %>
<% end %>
