<div class="container">
	<% if flash[:notice] %>
	    <div class="flash">
		    <%= flash[:notice] %>
	    </div>
    <% end %>
	<div class="row">
		<div class="col-lg-3">
			<%= render 'users/userinfo', user: @user %>
			<%= render 'books/newbook', book: @book %>
		</div>

		<div class="col-lg-9">
			<h2>Book detail</h2>
			<table class="table">
				<tr>
					<td><%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, class:"pull-left", fallback: "no_image.jpg", size:'30x30' %>
						<%= @user.name %></td>
					<td><%= @book.title %></td>
					<td><%= @book.body %></td>
					<% if @book.user == current_user %>
					<td><%= link_to 'Edit', edit_book_path(@book), class:"btn btn-success btn-xs" %></td>
					<td><%= link_to 'Destroy', book_path(@book), class:"btn btn-danger btn-xs", method: :delete, 'data-confirm' => "本当に削除しますか？" %></td>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
</div>