<div class="container">
  <div class="row">
    <div class="col-lg-2">

      <h2>User info</h2>

      <%= form_for(@user) do |f| %>
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                  <li>
                    <%= message %>
                  </li>
                  <% end %>
                </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, class:"form-control" %>
          </div>

          <div class="field">
            <%= f.label :image %><br />
            <%= f.attachment_field :profile_image %>
          </div>

          <div class="field">
            <%= f.label :introduction %>
            <%= f.text_field :introduction, autofocus: true, maxlength: "50", class:"form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Update User", class:"btn btn-default active" %>
          </div>
      <% end %>

    </div>
  </div>
</div>
