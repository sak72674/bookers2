
<div class="container">
	<% if flash[:notice] %>
	    <div class="flash">
		    <%= flash[:notice] %>
	    </div>
    <% end %>
	<div class="row">
		<div class="col-lg-3">
			<%= render 'users/userinfo', user: @user %>
			<%= render 'books/newbook', book: @book %>
		</div>

		<div class="col-lg-8">
			<h2>Books</h2>
			<table class="table">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, class:"image-circle pull-left profile-thumb", fallback: "no_image.jpg", size:'30x30' %></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
